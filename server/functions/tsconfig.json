{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "outDir": "lib",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": false,
    "strict": true,
    "target": "es5",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "lib": [
    "esnext"
  ]
}
